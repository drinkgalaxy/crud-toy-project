{{>layouts/header}}

{{#member}}
<form class="container" action="/members/update" method="post">
    <input name="id" type="hidden" value="{{id}}"> <!--히든 속성인 id를 서버에 함께 전송할 수 있음-->
    <div class="mb-3">
        <label class="form-label">이메일</label>
        <input type="text" class="form-control" name="email" value="{{email}}">
        <!--name을 써서 DTO의 title 필드와 연결-->
    </div>
    <div class="mb-3">
        <label class="form-label">비밀번호</label>
        <textarea class="form-control" rows="3" name="password">{{password}}</textarea>
        <!--name을 써서 DTO의 content 필드와 연결-->
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/members/{{id}}">Back</a>
</form>
{{/member}}

{{>layouts/footer}}